{
  "manifest_version": 2,
  "name": "Disable Telemetry",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "web_accessible_resources": ["blocklist.json"],
  "browser_specific_settings": {
    "gecko": { "id": "disable-telemetry@youraddon.com" }
  }
}
