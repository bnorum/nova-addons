{
    "manifest_version": 2,
    "name": "Disable Telemetry",
    "version": "1.0",
    "description": "Blocks Firefox telemetry and data reporting by intercepting network requests.",
    "icons": {
      "48": "icon.png"
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "*://*.telemetry.mozilla.org/*",
      "*://*.mozilla.com/*",
      "*://*.mozilla.org/*"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }