{
  "manifest_version": 2,
  "name": "NOVA Telemetry Handler",
  "version": "1.0",
  "description": "Blocks telemetry from websites.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "storage",
    "webRequest",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
  ],
  "icons": {
    "48": "icon.png"
  }
}
