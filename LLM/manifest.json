{
    "manifest_version": 2,
    "name": "Local LLM Extension",
    "version": "1.1",
    "description": "Interact with a local LLM from a popup",
    "permissions": [
      "activeTab",
      "*://localhost:11434/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icons/icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "128": "icons/icon.png"
    },
    "web_accessible_resources": [
      "fullview.html"
    ]

  }
